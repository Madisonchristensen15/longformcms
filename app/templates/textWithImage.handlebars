<section class="textWithImages">
    <div class="grid grid-pad">
        {{#each images}}
            <div class="image {{image_position}} {{image_width}}" {{animation}}>
                <img src="{{url}}" width="100%">

                {{#with caption}}
                    <div class="caption">
                        <h4>{{caption_title}}</h4>
                        <p>{{caption_text}}</p>
                    </div>
                {{/with}}
            </div>
        {{/each}}
    </div>
</section>